<div class="ui segment padded raised">
    <div class="ui block inverted header">Apresentação</div>
    <div class="ui two column stackable center grid">
        <div class="column">
            <div class="ui card">
                <input type="hidden" name="theme[apresentacao][img][value]">
                <div class="content">
                    <div class="header">Banner</div>
                    <div class="meta">1920 x 768</div>
                </div>
                <div class="content center aligned">
                    <img src="{{ theme.apresentacao.img.value }}" alt="logo" class="ui image small">
                </div>
                <div class="ui attached button btn-change-img">
                    <i class="icon add"></i> Trocar Imagem
                </div>
            </div>
        </div>

        <div class="column">
            <div class="ui form">
                <div class="ui field">
                    <label for="">Título</label>
                    <input type="text" placeholder="Título" value="{{ theme.apresentacao.titulo.value }}"
                        name="theme[apresentacao][titulo][value]">
                </div>
                <div class="ui field">
                    <label for="">Descrição</label>
                    <input type="text" placeholder="Descrição" value="{{ theme.apresentacao.descricao.value }}"
                        name="theme[apresentacao][descricao][value]">
                </div>
            </div>
        </div>
    </div>
</div>